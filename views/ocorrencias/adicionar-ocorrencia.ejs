<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Adiconar Ocorrencia</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
     <!-- FAVICON -->
     <link href="/assets/img/Logo1.png" rel="icon">
     <!-- ICONS -->
     <script src="https://kit.fontawesome.com/34e6a5e2fc.js" crossorigin="anonymous"></script>
    <script>
        function salvarDados() {
            const km_final = document.getElementById('assunto').value;
            const hora_final = document.getElementById('envolvidos').value;

            fetch('/viagem/adicionar-ocorrencia', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    km_final,
                    hora_final
                }),
            })
        
            .catch(error => {
                console.error('Erro ao salvar dados de chegada:', error);
            });
        }
    </script>
</head>
<body>
    <h1>Adicionar chegada</h1>

    <form action="/adicionar-ocorrencia" method="post">

        <label for="assunto">Assunto:</label>
        <input type="text" id="assunto" name="assunto">

        <label for="envolvidos">Envolvidos:</label>
        <input type="text" id="envolvidos" name="envolvidos">

        <button type="button" onclick="salvarDados()">Confirmar</button>
    </form>

    <button onclick="location.href='/login'">Voltar</button>
</body>
</html>