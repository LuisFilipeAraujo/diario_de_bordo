<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Historico</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
    <link rel="stylesheet" type="text/css" href="/assets/historico.css"> 
    <!-- FAVICON -->
    <link href="/assets/img/logo_jacarei.png" rel="icon">
    <!-- ICONS -->
    <script src="https://kit.fontawesome.com/34e6a5e2fc.js" crossorigin="anonymous"></script>
</head>
<body>
    <!-- Header -->
    <%- include('../partials/header.ejs', { title: 'Historico de viagens' }) %>
    <h1 class="text-center mb-4">Histórico de Viagens</h1>
     <!-- Formulário de Filtragem -->
     <div class="form-container"> 
     <form class="mb-4" method="GET" action="/viagens/historico">
        <div class="row">
            <div class="col-md-3">
                <label for="usuario" class="form-label">Usuário</label>
                <input type="text" class="form-control" id="usuario" name="usuario" placeholder="Nome do usuário">
            </div>
            <div class="col-md-3">
                <label for="veiculo" class="form-label">Veículo</label>
                <input type="text" class="form-control" id="veiculo" name="veiculo" placeholder="Modelo ou Placa">
            </div>
            <div class="col-md-3">
                <label for="data_inicio" class="form-label">Data Início</label>
                <input type="date" class="form-control" id="data_inicio" name="data_inicio">
            </div>
            <div class="col-md-3">
                <label for="data_fim" class="form-label">Data Fim</label>
                <input type="date" class="form-control" id="data_fim" name="data_fim">
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-3">
                <label for="ocorrencia" class="form-label">Ocorrência</label>
                <input type="text" class="form-control" id="ocorrencia" name="ocorrencia" placeholder="Assunto ou Envolvidos">
            </div>
            <div class="col-md-3">
                <label for="itinerario" class="form-label">Itinerário</label>
                <select class="form-select" id="itinerario" name="itinerario">
                    <option value="">Todos</option>
                    <% itinerarios.forEach(itinerario => { %>
                        <option value="<%= itinerario %>"><%= itinerario %></option>
                    <% }); %>
                </select>
            </div>
            <div class="col-md-3">
                <label for="servico" class="form-label">Serviço</label>
                <select class="form-select" id="servico" name="servico">
                    <option value="">Todos</option>
                    <% servicos.forEach(servico => { %>
                        <option value="<%= servico %>"><%= servico %></option>
                    <% }); %>
                </select>
            </div>
            <div class="col-md-3 d-flex align-items-end">
                <button type="submit" class="btn btn-primary w-50"><i class="fa-solid fa-magnifying-glass" style="color: #ffffff;"></i> Filtrar</button>
                <a href="/viagens/historico" class="btn btn-primary w-50 ms-2">Limpar</a>
            </div>
        </div>
    </form>
    </div>

    <div class="container my-5">
        
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Usuário</th>
                        <th>Veículo</th>
                        <th>Placa</th>
                        <th class="d-none d-md-table-cell">Itinerário</th>
                        <th class="d-none d-lg-table-cell">Serviço</th>
                        <th class="d-none d-lg-table-cell">Data Saída</th>
                        <th class="d-none d-lg-table-cell">Data Chegada</th>
                        <th class="d-none d-lg-table-cell">Km Saída</th>
                        <th class="d-none d-lg-table-cell">Km Chegada</th>
                        <th class="d-none d-xl-table-cell">Criado em</th>
                        <th class="d-none d-xl-table-cell">Modificado em</th>
                        <th>Ocorrência</th>
                    </tr>
                </thead>
                <tbody>
                    <% viagens.forEach(viagem => { %>
                        <tr>
                            <td><%= viagem.viagem_ID %></td>
                            <td><%= viagem.nome %></td>
                            <td><%= viagem.modelo %></td>
                            <td><%= viagem.placa %></td>
                            <td class="d-none d-md-table-cell"><%= viagem.itinerario %></td>
                            <td class="d-none d-lg-table-cell"><%= viagem.servico %></td>
                            <td class="d-none d-lg-table-cell"><%= viagem.dataSaida %></td>
                            <td class="d-none d-lg-table-cell"><%= viagem.dataChegada %></td>
                            <td class="d-none d-lg-table-cell"><%= viagem.kmSaida %></td>
                            <td class="d-none d-lg-table-cell"><%= viagem.kmChegada %></td>
                            <td class="d-none d-xl-table-cell"><%= viagem.createdAt %></td>
                            <td class="d-none d-xl-table-cell"><%= viagem.updatedAt %></td>
                            <td>
                                <% if (viagem.ocorrencias && viagem.ocorrencias.length > 0) { %>
                                    <strong>Assunto:</strong> <%= viagem.ocorrencias[0].assunto %><br>
                                    <strong>Envolvidos:</strong> <%= viagem.ocorrencias[0].envolvidos %>
                                <% } else { %>
                                    Nenhuma ocorrência
                                <% } %>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>

    <!-- Footer -->
    <%- include('../partials/footer.ejs') %>
</body>
</html>
