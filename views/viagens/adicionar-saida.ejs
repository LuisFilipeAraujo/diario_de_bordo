<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Adicionar saída</title>
     <!-- Bootstrap CSS -->
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
     <style>
        body, html {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
        }
        .header, .footer {
            background-color: #5f5f5f; /* Fundo cinza */
            height: 50px; /* Altura do cabeçalho e rodapé */
            line-height: 50px; /* Alinhamento vertical do texto */
            text-align: center; /* Centralização do texto */
        }
        .container {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
            max-width: 500px;
            margin: 0 auto;
            padding-top: 20px;
        }
        .form-group {
            margin-bottom: 20px;
        }
        .btn-primary {
            display: block;
            width: 100%;
        }
        button[type="submit"], button[type="button"] {
            margin-bottom: 10px;
        }
    </style>

    <script>
        function salvarDados() {
            const veiculo_ID = document.getElementById('veiculo').value;
            const itinerario = document.getElementById('itinerario').value === 'Outro' ? document.getElementById('novoItinerario').value : document.getElementById('itinerario').value;
            const servico = document.getElementById('servico').value === 'Outro' ? document.getElementById('novoServico').value : document.getElementById('servico').value;
            const kmSaida = document.getElementById('kmSaida').value;
            const dataSaida = document.getElementById('dataSaida').value;
            const usuario_ID = document.getElementById('usuario_ID').value; // Atualizado para buscar o campo oculto

            fetch('/viagem/adicionar-saida', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    veiculo_ID,
                    itinerario,
                    servico,
                    kmSaida,
                    dataSaida,
                    usuario_ID
                }),
            })
            .catch(error => {
                console.error('Erro ao salvar dados de saída:', error);
            });
        }

        function mostrarCampoOutro(selectElement, campoOutroID) {
            const campoOutro = document.getElementById(campoOutroID);
            if (selectElement.value === 'Outro') {
                campoOutro.style.display = 'block';
                campoOutro.required = true;
            } else {
                campoOutro.style.display = 'none';
                campoOutro.required = false;
            }
        }
    </script>
</head>
<body>
    <!-- Header -->
    <header class="header">
        <h1>Adicionar Saída</h1>
    </header>
    <div class="container">
        <form action="javascript:salvarDados()" method="post">
            <div class="form-group">
                <label for="name">Nome:</label>
                <input type="text" id="name" name="name" class="form-control" value="<%= user.nome %>" readonly>
            </div>
            <div class="form-group">
                <label for="username">Login:</label>
                <input type="text" id="username" name="username" class="form-control" value="<%= user.login %>" readonly>
                <input type="hidden" id="usuario_ID" name="usuario_ID" value="<%= user.usuario_ID %>">
            </div>
            <div class="form-group">
                <label for="veiculo">Selecione o veículo:</label>
                <select name="veiculo_ID" id="veiculo" class="form-control">
                    <% veiculos.forEach(function(veiculo) { %>
                        <option value="<%= veiculo.veiculo_ID %>">
                            <%= veiculo.marca %> - <%= veiculo.modelo %> - <%= veiculo.placa %>
                        </option>
                    <% }); %>
                </select>
            </div>
            <div class="form-group">
                <label for="itinerario">Itinerário:</label>
                <select id="itinerario" name="itinerario" class="form-control" required onchange="mostrarCampoOutro(this, 'novoItinerario')">
                    <% itinerarios.forEach(function(itinerario) { %>
                        <option value="<%= itinerario %>"><%= itinerario %></option>
                    <% }); %>
                    <option value="Outro">Outro</option>
                </select>
                <input type="text" id="novoItinerario" name="novoItinerario" class="form-control" placeholder="Digite o novo itinerário" style="display: none;">
            </div>
            <div class="form-group">
                <label for="servico">Serviço:</label>
                <select id="servico" name="servico" class="form-control" required onchange="mostrarCampoOutro(this, 'novoServico')">
                    <% servicos.forEach(function(servico) { %>
                        <option value="<%= servico %>"><%= servico %></option>
                    <% }); %>
                    <option value="Outro">Outro</option>
                </select>
                <input type="text" id="novoServico" name="novoServico" class="form-control" placeholder="Digite o novo serviço" style="display: none;">
            </div>
            <div class="form-group">
                <label for="kmSaida">Quilometragem Inicial:</label>
                <input type="number" id="kmSaida" name="kmSaida" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="dataSaida">Data e hora de Saída:</label>
                <input type="datetime-local" id="dataSaida" name="dataSaida" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary">Confirmar</button>
        </form>
        <button type="button" class="btn btn-secondary" onclick="location.href='/login'">Voltar</button>
    </div>
    <!-- Footer -->
    <footer class="footer">
        <p class="text-center">© 2024 Diário de Bordo. Todos os direitos reservados.</p>
    </footer>

    
</body>
</html>
