<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Adicionar saída</title>
    <script>
        function salvarDados() {
            const veiculo_ID = document.getElementById('veiculo').value;
            const itinerario = document.getElementById('itinerario').value;
            const servico = document.getElementById('servico').value;
            const kmInicial = document.getElementById('kmSaida').value;
            const dataHoraSaida = document.getElementById('dataSaida').value;
            const usuario_ID = document.getElementById('username').value;

            fetch('/viagem/adicionar-saida', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    veiculo_ID,
                    itinerario,
                    servico,
                    kmInicial,
                    dataHoraSaida,
                    usuario_ID
                }),
            })
          
            .catch(error => {
                console.error('Erro ao salvar dados de saída:', error);
            });
        }
    </script>
</head>
<body>
    <h1>Adicionar os detalhes da saída</h1>
    <form action="/adicionar-saida" method="post">
        <label for="name">Nome:</label>
        <input type="text" id="name" name="name" value="<%= user.nome %>" readonly>
        <label for="username">Id de Usuário:</label>
        <input type="text" id="username" name="username" value="<%= user.login %>" readonly>
        
        <!-- Dropdown list para veículos -->
        <label for="veiculo">Selecione o veículo:</label>
        <select name="veiculo_ID" id="veiculo">
            <% veiculos.forEach(function(veiculo) { %>
                <option value="<%= veiculo.veiculo_ID %>">
                    <%= veiculo.marca %> - <%= veiculo.modelo %> - <%= veiculo.placa %>
                </option>
            <% }); %>
        </select>

        <!-- Dropdown list para itinerário - usar group by-->
        <label for="itinerario">Itinerário:</label>
        <select id="itinerario" name="itinerario" required>
            <option value="Hospital São Francisco">Hospital São Francisco</option>
            <option value="São Paulo">São Paulo</option>
            <option value="Santa Casa">Santa Casa</option>
            <option value="Santa Branca">Santa Branca</option>
            <option value="Pq. Meia Lua">Pq. Meia Lua</option>
            <option value="Jd. Liberdade">Jd. Liberdade</option>
            <option value="Centro">Centro</option>
            <option value="São José dos Campos">São José dos Campos</option>
            <option value="IFSP">IFSP</option>
        </select>

        <!-- Dropdown list para serviço - usar group by -->
        <label for="servico">Serviço:</label>
        <select id="servico" name="servico" required>
            <option value="Transporte de Materiais">Transporte de Materiais</option>
            <option value="Busca de materiais">Busca de materiais</option>
            <option value="Transporte de paciente">Transporte de paciente</option>
            <option value="Transporte de pessoas">Transporte de pessoas</option>
            <option value="inspecao">Inspecao</option>
            <option value="ato de prevenção de saúde">Ato de prevenção de saúde</option>
            <option value="oficina de manutenção">Oficina de manutenção</option>
            <option value="vigilância sanitária">Vigilância sanitária</option>
        </select>

        <label for="kmSaida">Quilometragem Inicial:</label>
        <input type="integer" id="kmSaida" name="kmSaida" required>

        <label for="dataSaida">Data e hora de Saída:</label>
        <input type="datetime" id="dataSaida" name="dataSaida" required>
        
        <button type="button" onclick="salvarDados()">Confirmar</button>
    </form>
    <button onclick="location.href='/login'">Voltar</button>
</body>
</html>