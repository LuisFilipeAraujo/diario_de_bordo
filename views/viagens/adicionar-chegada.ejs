<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Adiconar chegada</title>
     <!-- Bootstrap CSS -->
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        .header, .footer {
            background-color: #5f5f5f; /* Fundo cinza */
            height: 50px; /* Altura do cabeçalho e rodapé */
            line-height: 50px; /* Alinhamento vertical do texto */
            text-align: center; /* Centralização do texto */
        }

    </style>

    <script>
        function salvarDados() {
            const kmChegada = document.getElementById('kmChegada').value;
            const dataChegada = document.getElementById('dataChegada').value;

            fetch('/viagem/adicionar-chegada', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    kmChegada,
                    dataChegada
                }),
            })
        
            .catch(error => {
                console.error('Erro ao salvar dados de chegada:', error);
            });
        }
    </script>
</head>
<body>
    <!-- Header -->
    <header class="header">
        <h1>Adicionar Chegada</h1>
    </header>
    <form action="javascript:salvarDados()" method="post">
        <label for="name">Nome:</label>
        <input type="text" id="name" name="name" value="<%= user.nome %>"readonly>
        <label for="username">Id de Usuário:</label>
        <input type="text" id="username" name="username" value="<%= user.usuario_ID %>"readonly>

        <label for="kmChegada">Quilometragem final:</label>
        <input type="number" id="kmChegada" name="kmChegada" required>

        <label for="dataChegada">Data e hora de Chegada:</label>
        <input type="datetime-local" id="dataChegada" name="dataChegada" required>

        <button type="submit">Confirmar</button>
    </form>
    <button onclick="location.href='/login'">Voltar</button>

    <!-- Footer -->
    <footer class="footer">
        <p class="text-center">© 2024 Diário de Bordo. Todos os direitos reservados.</p>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
</body>
</html>