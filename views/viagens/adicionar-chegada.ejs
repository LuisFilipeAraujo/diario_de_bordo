<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Adicionar chegada</title>
     <!-- Bootstrap CSS -->
     <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js" integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy" crossorigin="anonymous"></script>
     <style>
        body, html {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
        }
        .header, .footer {
            background-color: #5f5f5f; 
            height: 50px; 
            line-height: 50px; 
            text-align: center; 
        }
        .container {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
            max-width: 500px;
            margin: 0 auto;
            padding-top: 20px;
        }
        .form-group {
            margin-bottom: 20px;
        }
        .btn-primary {
            display: block;
            width: 100%;
        }
        button[type="submit"], button[type="button"] {
            margin-bottom: 10px;
        }
    </style>

    <script>
        function salvarDados() {
            const kmChegada = document.getElementById('kmChegada').value;
            const dataChegada = document.getElementById('dataChegada').value;
            const usuario_ID = document.getElementById('usuario_ID').value;

            fetch('/viagem/adicionar-chegada', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    kmChegada,
                    dataChegada,
                    usuario_ID
                }),
            })
            .catch(error => {
                console.error('Erro ao salvar dados de chegada:', error);
            });
        }
    </script>
</head>
<body>
    <!-- Header -->
    <%- include('../partials/header.ejs', { title: 'Menu de opções do Motorista' }) %>
    <div class="container">
        <form action="javascript:salvarDados()" method="post">
            <div class="form-group">
                <label for="name">Nome:</label>
                <input type="text" id="name" name="name" class="form-control" value="<%= user.nome %>" readonly>
            </div>
            <div class="form-group">
                <label for="username">Login:</label>
                <input type="text" id="username" name="username" class="form-control" value="<%= user.login %>" readonly>
                <input type="hidden" id="usuario_ID" name="usuario_ID" value="<%= user.usuario_ID %>">
            </div>
            <div class="form-group">
                <label for="kmChegada">Quilometragem final:</label>
                <input type="number" id="kmChegada" name="kmChegada" class="form-control" required>
            </div>
            <div class="form-group">
                <label for="dataChegada">Data e hora de Chegada:</label>
                <input type="datetime-local" id="dataChegada" name="dataChegada" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary">Confirmar</button>
        </form>
        <button type="button" class="btn btn-secondary" onclick="location.href='/login'">Voltar</button>
    </div>
    <!-- Footer -->
    <%- include('../partials/footer.ejs') %>

    
</body>
</html>
